<style>
	body {
		background-color: #f1f2f9;
	}
	main {
		margin: auto;
		padding: 1rem;
		width: 80vw;
		max-width: calc(100% - 2rem);
		color: var(--text-color);
		font-size: 20px;
		line-height: 1.6;
	}
	.alphabet-grid {
		display: grid;
		grid-template-columns: repeat(6, minmax(5rem, 1fr));
		gap: 2rem;
		padding: 0;
	}

	h1 {
		font-size: 2rem;
	}

	p.instructions {
		font-size: 1rem;
		margin-bottom: 1rem;
	}

	@media screen and (max-width: 820px) {
		.alphabet-grid {
			grid-template-columns: repeat(5, minmax(5rem, 1fr));
		}
	}
</style>
